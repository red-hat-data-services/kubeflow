# https://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,py,go,sh}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.{yaml,yml,md}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
[Makefile]
indent_style = tab

[*.go]
indent_style = tab
